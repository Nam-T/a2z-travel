<!DOCTYPE html>
<html>
  <head>
    <title>A2zTravel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
  </head>
  <body class="sign-in" oncontextmenu="return false;">
    <div class="wrapper">
      <div class="sign-in-page">
        <div class="signin-popup">
          <div class="signin-pop">
            <div class="row">
              <div class="col-lg-6">
                <div class="cmp-info">
                  <div class="cm-logo">
                    <%=image_tag("login-logo.png")%>
                    <p>A2Ztravel, is a global travel platform built as a social network where travel lovers and travelers connect and collaborate remotely
                    </p>
                  </div>
                  <!--cm-logo end-->
                  <%=image_tag("cm-main-img.png")%>
                </div>
                <!--cmp-info end-->
              </div>
              <div class="col-lg-6">
                <div class="login-sec">
                  <ul class="sign-control">
                    <li data-tab="tab-1" class="current"><a href="#" title="">Đăng nhập</a></li>
                    <li data-tab="tab-2"><a href="#" title="">Đăng ký</a></li>
                  </ul>
                  <div class="sign_in_sec current" id="tab-1">
                    <%= yield %>
                    <!--login-resources end-->
                  </div>
                  <!--sign_in_sec end-->
                  <div class="sign_in_sec" id="tab-2">
                    <!--signup-tab end-->
                    <div class="dff-tab current" id="tab-3">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <div class="row">
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input type="text" name="email" placeholder="Nhập Email">
                              <i class="la la-user"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input type="text" name="phone" placeholder="Nhập số điện thoại">
                              <i class="la la-globe"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input type="password" name="password" placeholder="Nhập mật khẩu">
                              <i class="la la-lock"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input type="password" name="password_confirmation"
															placeholder="Nhập lại mật khẩu">
                              <i class="la la-lock"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="checky-sec st2">
                              <div class="fgt-sec">
                                <input type="checkbox" name="cc" id="c2">
                                <label for="c2">
                                  <span></span>
                                </label>
                                <small>Đồng ý, Tôi đã hiểu các điều khoản của A2Ztravel.</small>
                              </div>
                              <!--fgt-sec end-->
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <button type="submit" value="submit">Đăng ký</button>
                          </div>
                        </div>
                      <% end %>
                    </div>
                    <!--dff-tab end-->
                  </div>
                </div>
                <!--login-sec end-->
              </div>
            </div>
          </div>
          <!--signin-pop end-->
        </div>
        <!--signin-popup end-->
      </div>
      <!--sign-in-page end-->
    </div>
    <!--theme-layout end-->
  </body>
</html>
